.esn-clipboard-url
  .fg-line
    input.form-control(type="text", ng-model="ctrl.url", ng-click="ctrl.onTextClick($event)", readonly)
  a.btn.btn-link
    md-tooltip(md-direction="top") {{ 'Copy to clipboard' | translate }}
    i.mdi.mdi-clipboard-arrow-left(
      ngclipboard
      data-clipboard-text="{{ctrl.url}}",
      ngclipboard-success="ctrl.onCopySuccess();" ngclipboard-error="ctrl.onCopyError(e);"
    )
