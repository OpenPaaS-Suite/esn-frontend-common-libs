.collaboration-member.lv-item
  .media
    .pull-left
      a(ui-sref="profile({user_id: ctrl.member._id})")
        img.lv-img-sm(ng-src="/api/users/{{::ctrl.member._id}}/profile/avatar", src="assets/images/user.png", alt="{{ 'Profile Avatar' | translate }}")
    .pull-right
      ul.actions(ng-if="ctrl.isCollaborationManager")
        li.dropdown
          a(href="" data-toggle="dropdown" aria-expanded="false")
            i.mdi.mdi-dots-vertical
          ul.dropdown-menu.dropdown-menu-right
            li
              a(href="", ng-click='ctrl.removeMember()') {{ 'Remove' | translate }}
    .media-body
      .lv-title {{::ctrl.member.firstname}} {{::ctrl.member.lastname}}
        span.type.label.label-primary(ng-if='ctrl.creator') {{ 'Creator' | translate }}
      small.lv-small {{ ::ctrl.member.preferredEmail}}

